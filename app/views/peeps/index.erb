<nav>
  <% if current_user %>
    <form action="/peeps/new">
      <button type="submit" class="inline" id="new-peep">Post a new peep</button>
    </form>
  <% else %>
    <form action="/sessions/new">
      <button type="submit" class="inline">Log in</button>
    </form>
    <form action="/users/new">
      <button type="submit" class="inline" id="sign-up">Sign up</button>
    </form>
  <% end %>
</nav>

<article id="peeps">
  <h1>Chitter</h1>
  <h1>Current Peeps</h1>
  <ul>
    <% @peeps.each do |peep| %>
      <li class="peep">
        <div class="user" id="name">
          <%= peep.user.name %>
        </div>
        <div class="user" id="username-time">
          @<%= peep.user.username %> <%= peep.time %>
        </div>
        <p><%= peep.content %></p>
        <a href="/<%= peep.id %>/comments">Comments (<%= peep.comments.count %>)</a>
        <hr />
      </li>
    <% end %>
  </ul>
</article>
